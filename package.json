{
  "name": "mcxoscnext",
  "productName": "mcxoscnext",
  "version": "1.0.1",
  "description": "A bridge between emberplus and OSC protocols",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build --win --x64",
    "publish": "electron-builder  build --publish always"
  },
  "keywords": [],
  "author": {
    "name": "dewiweb",
    "email": "dewiweb@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "mcxoscnext",
    "directories": {
      "buildResources": "resources",
      "output": "release-builds"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/assets/icons/256x256.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./src/assets/icons/256x256.ico",
      "uninstallerIcon": "./src/assets/icons/256x256.ico",
      "license": "./LICENSE.md",
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "emberplus-connection": "^0.1.2",
    "osc": "^2.4.2"
  },
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0"
  }
}
